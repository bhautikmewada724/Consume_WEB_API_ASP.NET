@model CountryModel

<div class="card">
    <div class="card-body">
        @if (@ViewBag.CountryID == null || @ViewBag.CountryID == 0)
        {

            <h5 class="card-title"> Add Country </h5>
        }
        else
        {

            <h5 class="card-title"> Edit Country  </h5>
        }
        <!-- Multi Columns Form -->
        <form class="row g-3" asp-action="Save">
            <input type="hidden" class="form-control" id="countryID" asp-for="CountryID">

            <div class="col-md-12">
                <label for="countryName" class="form-label"><span class="text-danger">*</span>Country Name</label>
                <input type="text" class="form-control" id="countryName" asp-for="CountryName">
                <span class="text-danger" asp-validation-for="CountryName"></span>
            </div>

            <div class="col-md-12">
                <label for="countryCode" class="form-label"><span class="text-danger">*</span>Country Code</label>
                <input type="text" class="form-control" id="countryCode" asp-for="CountryCode">
                <span class="text-danger" asp-validation-for="CountryCode"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a asp-controller="Country" asp-action="Index" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
    
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


}