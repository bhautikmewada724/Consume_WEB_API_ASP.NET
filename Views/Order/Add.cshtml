@model OrderModel

<div class="card">
    <div class="card-body">
        @if (@ViewBag.OrderID == null || @ViewBag.OrderID == 0)
        {

            <h5 class="card-title"> Add Order </h5>
        }
        else
        {

            <h5 class="card-title"> Edit Order  </h5>
        }
        <!-- Multi Columns Form -->
        <form class="row g-3" asp-action="Save">
            <input type="hidden" class="form-control" id="orderID" asp-for="OrderID">

            <div class="col-md-12">
                <label for="orderDate" class="form-label"><span class="text-danger">*</span>Order Date</label>
                <input type="text" class="form-control" id="orderDate" asp-for="OrderDate">
                <span class="text-danger" asp-validation-for="OrderDate"></span>
            </div>
            <div class="col-md-12">
                <label for="paymentMode" class="form-label"><span class="text-danger">*</span>Payment Mode</label>
                <input type="text" class="form-control" id="paymentMode" asp-for="PaymentMode">
                <span class="text-danger" asp-validation-for="PaymentMode"></span>
            </div>

            <div class="col-md-12">
                <label for="shippingAddress" class="form-label"><span class="text-danger">*</span>Shipping Address</label>
                <textarea type="text" class="form-control" id="shippingAddress" asp-for="ShippingAddress"></textarea>
                <span class="text-danger" asp-validation-for="ShippingAddress"></span>
            </div>


            <div class="col-md-12">
                <label for="totalAmount" class="form-label"><span class="text-danger">*</span>Total Amount</label>
                <input type="text" class="form-control" id="totalAmount" asp-for="TotalAmount">
                <span class="text-danger" asp-validation-for="TotalAmount"></span>
            </div>


            <div class="col-md-12">
                <label for="userID" class="form-label"><span class="text-danger">*</span>User </label>
                <select id="userID" class="form-control form-select" asp-for="UserID">
                    <option value="">Select User</option>
                    @foreach (var user in ViewBag.UserList)
                    {

                        <option value="@user.UserID">@user.UserName</option>
                    }
                </select>
                <span asp-validation-for="UserID" class="text-danger"></span>

            </div>

            <div class="col-md-12">
                <label for="customerID" class="form-label"><span class="text-danger">*</span>Customer </label>
                <select id="customerID" class="form-control form-select" asp-for="CustomerID">
                    <option value="">Select User</option>
                    @foreach (var customer in ViewBag.CustomerList)
                    {

                        <option value="@customer.CustomerID">@customer.CustomerName</option>
                    }
                </select>
                <span asp-validation-for="CustomerID" class="text-danger"></span>

            </div>


            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a asp-controller="Order" asp-action="Index" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


}