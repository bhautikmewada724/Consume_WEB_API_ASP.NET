@model StateModel

<div class="card">
    <div class="card-body">
        @if (@ViewBag.StateID == null || @ViewBag.StateID == 0)
        {

            <h5 class="card-title"> Add State </h5>
        }
        else
        {

            <h5 class="card-title"> Edit State  </h5>
        }
        <!-- Multi Columns Form -->
        <form class="row g-3" asp-action="Save">
            <input type="hidden" class="form-control" id="stateID" asp-for="StateID">

            <div class="col-md-12">
                <label for="stateName" class="form-label"><span class="text-danger">*</span>State Name</label>
                <input type="text" class="form-control" id="stateName" asp-for="StateName">
                <span class="text-danger" asp-validation-for="StateName"></span>
            </div>

            <div class="col-md-12">
                <label for="stateCode" class="form-label"><span class="text-danger">*</span>State Code</label>
                <input type="text" class="form-control" id="stateCode" asp-for="StateCode">
                <span class="text-danger" asp-validation-for="StateCode"></span>
            </div>
            <div class="col-md-12">
                <label for="countryID" class="form-label"><span class="text-danger">*</span>Country </label>
                <select id="countryID" class="form-control form-select" asp-for="CountryID" onchange="selectcountry(event)">
                    <option value="">Select Country</option>
                    @foreach (var country in ViewBag.countryList)
                    {

                        <option value="@country.CountryID">@country.CountryName</option>
                    }
                </select>
                <span asp-validation-for="CountryID" class="text-danger"></span>

            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a asp-controller="State" asp-action="Index" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


}